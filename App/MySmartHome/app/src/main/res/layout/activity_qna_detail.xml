<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".qna.QnaDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/qna_detail_close"
            android:src="@drawable/baseline_arrow_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/detail_qna_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="제목"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>


    </LinearLayout>



    <View
        style="@style/gray_view_line1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        >


        <TextView

            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="첨부파일 개수"
            android:textStyle="bold"
            android:textSize="17dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/detail_qna_filecnt"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="첨부파일"
            android:textSize="17dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="조회수"
            android:textStyle="bold"
            android:textSize="17dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/detail_qna_readcnt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="000"
            android:textSize="17dp"
            android:gravity="center_vertical"
            />



    </LinearLayout>


    <View
        style="@style/gray_view_line1dp"/>




    <TextView
        android:id="@+id/detail_qna_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        />











</LinearLayout>