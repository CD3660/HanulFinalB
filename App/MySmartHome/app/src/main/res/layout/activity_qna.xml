<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qna.QnaActivity"
    android:padding="20dp"
    android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#B5C2E8F9">


         <ImageView
             android:id="@+id/qna_close"
             android:src="@drawable/baseline_arrow_back"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginLeft="8dp"
             android:layout_gravity="center"/>



        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Q&amp;A"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        </LinearLayout>



        <View
            style="@style/gray_view_line1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#F4F4F4">


                <TextView
                    android:id="@+id/item_qna_title"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/item_qna_writer"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="작성자"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_margin="5dp"
                    />


                <TextView
                    android:id="@+id/item_qna_writedate"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="작성일"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_margin="5dp"
                    />

        </LinearLayout>


        <View
            style="@style/gray_view_line1dp"/>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_qna"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>












</LinearLayout>